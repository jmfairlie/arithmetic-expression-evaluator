{
  "compilerOptions": {
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "target": "es5",
    "module": "es6",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/", "jest.config.*"]
}
